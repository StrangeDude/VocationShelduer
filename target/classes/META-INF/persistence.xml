      <property name="hibernate.connection.user" value="SYSDBA"/>
      <property name="hibernate.connection.password" value="masterkey"/>
      <property name="hibernate.connection.url" value="jdbc:firebirdsql://localhost:3050/C:/DataBases/testdb.fdb"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.use_sql_comments" value="false"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.naming_strategy" value="org.hibernate.cfg.EJB3NamingStrategy"/>
      <property name="hibernate.jdbc.time_zone" value="UTC"/>
    </properties>

  </persistence-unit>
</persistence>
